<?xml version="1.0" encoding="utf-8"?>
<!--Layout to show product details-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greenish"
        >
        <ImageView
            android:id="@+id/backBtnOrderDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
        <ImageView
            android:id="@+id/Seller_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:textStyle="bold"

            />
        <ImageView
            android:id="@+id/Seller_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/Seller_delete_btn"
            android:src="@drawable/ic_baseline_edit_24"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/OrderDetailsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            />


    </RelativeLayout>


</RelativeLayout>