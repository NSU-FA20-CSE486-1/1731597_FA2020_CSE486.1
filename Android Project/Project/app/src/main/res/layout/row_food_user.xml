<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="5dp"
    android:background="@color/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/foodIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/additem_logo"
            >
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/foodIcon"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/discountNoteTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15% Off"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="2dp"

                />
            <TextView
                android:id="@+id/FoodTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Title"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="2dp"
                />
            <TextView
                android:id="@+id/FoodDescTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="2dp"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/priceDiscounted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$15"
                    android:background="@color/greenish"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="2dp"


                    />
                <TextView
                    android:id="@+id/originalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_toEndOf="@id/priceDiscounted"
                    />
                <Button
                    android:id="@+id/addToCartButton"
                    android:layout_below="@+id/originalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@color/greenish"
                    android:backgroundTint="@color/greenish"
                    android:text="Add to cart"
                    android:layout_marginTop="10dp"

                    />


            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/nextIcon"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:src="@drawable/next_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>