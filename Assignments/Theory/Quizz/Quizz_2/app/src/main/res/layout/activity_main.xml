<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="#FBF9F9"
    android:gravity="center"
    >
    <EditText
        android:id="@+id/eng_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/english_word"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/ben_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/bengali_word"
        android:padding="10dp"
        android:layout_toEndOf="@+id/eng_word"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_below="@+id/eng_word"
        android:layout_centerHorizontal="true"

        />
    <Button
        android:id="@+id/dictionaryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dictionary"
        android:layout_below="@+id/saveBtn"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>